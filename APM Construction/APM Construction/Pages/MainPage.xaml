<Page x:Class="APM_Construction.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:APM_Construction.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="1" VerticalAlignment="Center">
            <Button Name="Projects" Content="Projects" Click="ToProject" />
            <Button Name="Resources" Content="Resources in stock" Click="ToResource" Margin="0,5,0,0"/>
            <Button Name="Tasks" Content="Tasks" Click="ToTask" Margin="0,5,0,0"/>
            <Button Name="Employee" Content="Employee" Click="ToEmployee" Margin="0,5,0,0"/>
            <Button Content="Log out" Click="LogOut" Margin="0,5,0,0"/>
        </StackPanel>
    </Grid>
</Page>
