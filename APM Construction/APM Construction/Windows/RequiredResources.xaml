<Window x:Class="APM_Construction.Windows.RequiredResources"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:APM_Construction.Windows"
        mc:Ignorable="d"
        Title="RequiredResources" Height="350" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0.15*"/>
        </Grid.RowDefinitions>

        <DataGrid Name="ResourceList" ScrollViewer.CanContentScroll="True" CanUserDeleteRows="False" CanUserAddRows="False" 
          ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto"/>

        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center">
            <Button Content="Select" Height="20" Margin="5" Click="Select"/>
            <Button Content="Cancel" Height="20" Margin="5" Click="Cancel"/>
        </StackPanel>
    </Grid>
</Window>
