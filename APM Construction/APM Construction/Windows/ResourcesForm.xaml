<Window x:Class="APM_Construction.Windows.ResourcesForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:APM_Construction.Windows"
        mc:Ignorable="d"
        Title="ResourcesForm" Height="300" Width="500">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Resource name"/>
            <TextBox Name="ResourceName" Width="350"/>
            <Label Content="Unit"/>
            <TextBox Name="Unit" Width="350"/>
            <Label Content="Price for Unit"/>
            <TextBox Name="PriceForUnit" Width="350"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="OK" Click="OK" Margin="5"/>
                <Button Content="Cancel" Margin="5" Click="Cancel"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
